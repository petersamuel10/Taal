<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/twilight_blue</item>
        <item name="colorPrimaryDark">@color/twilight_blue</item>
        <item name="colorAccent">@color/pinkish_orange</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView" >

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="colorAccent">@color/pinkish_orange</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Text Styles -->
    <style name="Medium">
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Light">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Normal">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ParameterText">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
